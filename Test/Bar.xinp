<?xml version="1.0" encoding="UTF-8" standalone="yes"?>

<simulation>
  <geometry>
    <patchfile type="bsplines">bar.g2</patchfile>
    <raiseorder patch="1" u="1" v="1"/>
    <refine type="uniform" patch="1" u="15" v="15"/>
    <topologysets>
      <set name="Bottom" type="edge">
        <item patch="1">3</item>
      </set>
      <set name="Top" type="edge">
        <item patch="1">4</item>
      </set>
      <set name="Left" type="edge">
        <item patch="1">1</item>
      </set>
      <set name="Right" type="edge">
        <item patch="1">2</item>
      </set>
    </topologysets>
  </geometry>

  <advectiondiffusion>
    <advectionfield>0|0</advectionfield>
    <kappa>0.1</kappa>
    <boundaryconditions>
      <dirichlet set="Bottom" comp="1">300.0</dirichlet>
      <dirichlet set="Top" comp="1">300.0</dirichlet>
   </boundaryconditions>
 </advectiondiffusion>

 <elasticity>
   <isotropic E="1.0e5" nu="0.0" alpha="1.2e-7"/>
   <boundaryconditions>
     <dirichlet set="Left" comp="1"/>
     <dirichlet set="Top" comp="2"/>
   </boundaryconditions>
   <initialtemperature>150.0</initialtemperature>
 </elasticity>

 <timestepping start="0" end="1.0" dt="0.1"/>

</simulation>
